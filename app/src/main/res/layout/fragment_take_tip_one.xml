<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".controller.fragments.TakeTipOneFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">
        <ImageButton
                android:id="@+id/takeTipStepOneBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:background="@null"/>
        <TextView
                android:id="@+id/takeTipStepOneTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Шаг первый"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"/>
        <TextView
                android:id="@+id/takeTipStepOnePostTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите понравившегося сотрудника"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/takeTipStepOneStaffRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>