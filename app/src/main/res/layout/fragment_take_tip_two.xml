<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context=".controller.fragments.TakeTipTwoFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">
        <ImageButton
                android:id="@+id/takeTipStepOneBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:background="@null"/>
        <TextView
                android:id="@+id/takeTipStepTwoTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Шаг второй"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"/>
        <TextView
                android:id="@+id/takeTipStepTwoPostTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Укажите сумму чаевых и укажите платежные\nреквезиты"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">
            <LinearLayout
                    android:id="@+id/takeTipStepTwoTipChooserLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_weight="1">
                    <ImageButton
                            android:id="@+id/takeTipStepTwoTipMinusButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_substract"
                            android:background="@null"
                            android:scaleX="0.5"
                            android:layout_gravity="center"
                    />
                    <TextView
                            android:id="@+id/takeTipStepTwoTipCountTip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="48sp"
                            android:text="0 \u20bd"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"/>
                    <ImageButton
                            android:id="@+id/takeTipStepTwoTipPlusButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add"
                            android:background="@null"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <Button
                            android:id="@+id/takeTipStepTwoTipSelector100"
                            android:layout_width="48dp"
                            android:layout_height="36dp"
                            android:text="100"
                            android:textColor="#ffffff"
                            android:backgroundTint="#70ffffff"
                            android:layout_margin="4dp"
                    />
                    <Button
                            android:id="@+id/takeTipStepTwoTipSelector200"
                            android:layout_width="48dp"
                            android:layout_height="36dp"
                            android:text="200"
                            android:textColor="#ffffff"
                            android:backgroundTint="#70ffffff"
                            android:layout_margin="4dp"
                    />
                    <Button
                            android:id="@+id/takeTipStepTwoTipSelector400"
                            android:layout_width="48dp"
                            android:layout_height="36dp"
                            android:text="400"
                            android:textColor="#ffffff"
                            android:backgroundTint="#70ffffff"
                            android:layout_margin="4dp"
                    />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">
            <LinearLayout
                    android:id="@+id/takeTipStepTwoCardInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F0F0EE"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="12dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right">
                    <ImageView
                            android:id="@+id/takeTipStepTwoMasterCardImage"
                            android:layout_width="30dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_maestro"
                            android:layout_marginRight="8dp"/>
                    <ImageView
                            android:id="@+id/takeTipStepTwoMaestroImage"
                            android:layout_width="30dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_maestro"
                            android:layout_marginRight="8dp"/>
                    <ImageView
                            android:id="@+id/takeTipStepTwoVisaImage"
                            android:layout_width="30dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_visa"
                            android:layout_marginRight="8dp"/>
                    <ImageView
                            android:id="@+id/takeTipStepTwoMirImage"
                            android:layout_width="30dp"
                            android:layout_height="24dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mirlogo"
                            android:layout_marginRight="8dp"/>
                </LinearLayout>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="номер карты"
                        android:background="@layout/rate_edittext_border"
                        android:padding="4dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:inputType="numberDecimal"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/takeTipStepTwoValidToTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="valid thru"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="MM"
                                    android:background="@layout/rate_edittext_border"
                                    android:padding="4dp"
                                    android:inputType="numberDecimal"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"/>
                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="ГГ"
                                    android:background="@layout/rate_edittext_border"
                                    android:padding="4dp"
                                    android:inputType="numberDecimal"/>
                        </LinearLayout>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Три цифры\nна обороте\nкарты"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"/>
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="CVC"
                                android:background="@layout/rate_edittext_border"
                                android:padding="4dp"
                                android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
            <TextView
                    android:id="@+id/takeTipStepTwoComissionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="К оплате 0.00"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ₽, с учетом коммиссии 1%"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ваш банк может взять дополнительную коммиссию"
                android:textSize="12sp"
                android:textAlignment="center"/>
        <Button
                android:id="@+id/takeTipStepTwoTakeTipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="оставить чаевые"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#ffffff"/>
    </LinearLayout>
</FrameLayout>