<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="6dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/restaurantImage"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:scaleType="fitXY"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">
                <TextView
                        android:id="@+id/restaurantTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="restaurant_name"
                        android:textSize="24sp"
                        android:textColor="#000000"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RatingBar
                            android:id="@+id/restaurantRatingBar"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:rating="3"
                            android:stepSize="1"
                            android:numStars="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:id="@+id/restaurantRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.2"
                            android:textColor="#000000"/>
                    <TextView
                            android:id="@+id/restaurantVotesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(22)"
                            android:textSize="12sp"
                            android:textColor="#000000"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/restaurantAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="restaurant_address"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"/>
                <TextView
                        android:id="@+id/restaurantReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="restaurant_description"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24sp">
                    <TextView
                            android:id="@+id/restaurantTip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ОСТАВИТЬ ЧАЕВЫЕ"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:background="@null"
                            android:textColor="@color/colorAccent"/>
                    <ImageButton
                            android:id="@+id/restaurantCallButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_phone_inactive"
                            android:background="@null"
                            android:paddingRight="12dp"
                    />
                    <ImageButton
                            android:id="@+id/restaurantFavoriteButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_inactive"
                            android:background="@null"
                            android:paddingRight="10dp"
                            android:paddingLeft="12dp"
                            android:layout_gravity="right"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>